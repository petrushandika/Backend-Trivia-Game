generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  avatars  Avatar[]
  answers  Answer[]
  rankings Ranking[]
}

model Avatar {
  id        Int     @id @default(autoincrement())
  price     Int
  isPremium Boolean @default(false)
  userId    Int?

  user User? @relation(fields: [userId], references: [id])
}

model Question {
  id          Int     @id @default(autoincrement())
  image       String?
  content     String
  description String?

  answers  Answer[]
  rankings Ranking[]
}

model Answer {
  id          Int     @id @default(autoincrement())
  description String
  isCorrect   Boolean
  userId      Int
  questionId  Int

  user     User     @relation(fields: [userId], references: [id])
  question Question @relation(fields: [questionId], references: [id])
}

model Ranking {
  id         Int     @id @default(autoincrement())
  isWinner   Boolean
  userId     Int
  questionId Int

  user     User     @relation(fields: [userId], references: [id])
  question Question @relation(fields: [questionId], references: [id])
}
